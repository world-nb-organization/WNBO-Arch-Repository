name: Build AUR packages 

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]
  schedule:
      - cron:  '30 11 * * *'

jobs:

  build:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v3
    - name: Build the Docker image
      run: docker -v /:/aur run arch-aur:$(date +%s)
